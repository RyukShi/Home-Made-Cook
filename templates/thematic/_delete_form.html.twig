<form method="POST" action="{{ path('app_thematic_delete', {'id': thematic.id}) }}" onsubmit="return confirm('Are you sure you want to delete this thematic?');">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ thematic.id) }}" />
    <button type="submit" class="btn btn-danger">Delete</button>
</form>
